<div class="m-6" style="margin-top: 10px;">
    <div class="card">
        <div class="row">
            <div class="col-md-4">
               <img src="/img/product.png" class="card-img-top" alt="..." >
            </div>
            <div class="col-md-6">
                <h2>{{this.product.title}}</h2>
                <p>{{this.product.description}}</p>
                 <p>Precio: </p><h3> S/{{this.product.price}}</h3>
                 <p>Stock Disponible: </p> <h4>{{this.product.stock}}</h4>
                 <div class="btn-product">       
                    <button id="btnAddToCart" data-cartId="{{this.cart}}" data-productId="{{this.product._id}}" class="btn btn-success">Agregar al Carrito</button>
                 </div>
            </div>
    </div>
</div>

 <script src="/js/products.js"></script>
